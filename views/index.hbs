{{> header}}
    <!-- Main Content -->
    <main class="min-h-screen text-white pt-15 pb-14 px-4">
        <!-- Dashboard Section -->
        <section id="dashboard" class="active-section">
            <div class="dashboard-grid">
                <!-- Progress Overview -->
                <div class="card progress-card">
                    <h2>Your Progress</h2>
                    <div class="progress-stats">
                        <div class="stat">
                            <span class="label">Overall Progress</span>
                            <div class="progress-bar">
                                <div class="progress" style="width: 75%">75%</div>
                            </div>
                        </div>
                        <div class="stat">
                            <span class="label">Points</span>
                            <span class="value">2,450</span>
                        </div>
                        <div class="stat">
                            <span class="label">Completed Modules</span>
                            <span class="value">15/20</span>
                        </div>
                    </div>
                </div>

                <!-- Active Challenges -->
                <div class="card challenges-card">
                    <h2>Active Challenges</h2>
                    <div class="challenge-list">
                        <div class="challenge">
                            <i class="fas fa-lock"></i>
                            <div class="challenge-info">
                                <h3>Phishing Defense</h3>
                                <p>Identify and report suspicious emails</p>
                                <div class="progress-bar">
                                    <div class="progress" style="width: 60%">60%</div>
                                </div>
                            </div>
                        </div>
                        <div class="challenge">
                            <i class="fas fa-shield-virus"></i>
                            <div class="challenge-info">
                                <h3>Malware Analysis</h3>
                                <p>Learn to detect and analyze malware</p>
                                <div class="progress-bar">
                                    <div class="progress" style="width: 30%">30%</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Achievements -->
                <div class="card achievements-card">
                    <h2>Recent Achievements</h2>
                    <div class="achievements-grid">
                        <div class="achievement">
                            <i class="fas fa-trophy achievement-icon"></i>
                            <span>Firewall Master</span>
                        </div>
                        <div class="achievement">
                            <i class="fas fa-medal achievement-icon"></i>
                            <span>Encryption Expert</span>
                        </div>
                        <div class="achievement locked">
                            <i class="fas fa-lock achievement-icon"></i>
                            <span>Network Guardian</span>
                        </div>
                    </div>
                </div>

                <!-- Leaderboard -->
                <div class="card leaderboard-card">
                    <h2>Top Performers</h2>
                    <div class="leaderboard-list">
                        <div class="leaderboard-item">
                            <span class="rank">1</span>
                            <span class="name">Sarah Connor</span>
                            <span class="points">3,250 pts</span>
                        </div>
                        <div class="leaderboard-item">
                            <span class="rank">2</span>
                            <span class="name">John Smith</span>
                            <span class="points">3,100 pts</span>
                        </div>
                        <div class="leaderboard-item current-user">
                            <span class="rank">3</span>
                            <span class="name">You</span>
                            <span class="points">2,450 pts</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
{{> footer}}